{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2018"],
    "target": "ES2018",
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true
  },
  "include": ["*.ts"]
}
